{
    "app-id" : "org.gnome.IconPreview",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "3.32",
    "sdk" : "org.gnome.Sdk",
    "command" : "gnome-icon-preview",
    "finish-args" : [
        "--share=ipc",
        "--device=dri",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--filesystem=home",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/share/pkgconfig",
        "/share/vala",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "libdazzle",
            "buildsystem" : "meson",
            "config-opts" : [
                "-Denable_tools=false",
                "-Dwith_vapi=true",
                "-Denable_tests=false"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://ftp.gnome.org/pub/GNOME/sources/libdazzle/3.32/libdazzle-3.32.1.tar.xz",
                    "sha256" : "238da19fdcc3ae9bb0c2d781d099fb8c6ec70c4dd3dffad80d230344ecc3f972"
                }
            ]
        },
        {
            "name" : "libhandy",
            "buildsystem" : "meson",
            "config-opts": [
                "-Dglade_catalog=disabled"
            ],
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://source.puri.sm/Librem5/libhandy.git",
                    "tag" : "v0.0.9",
                    "commit" :  "56b0aa62f6251ee19a88fc208b7ca8dcf9c9633c"
                }
            ],
            "cleanup" : [
                "/bin"
            ]
        },
        {
            "name" : "icon-preview",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/ZanderBrown/icon-tool.git",
                    "tag" : "0.9.4",
                    "commit" : "81574315e39224d65ee6fd055791b70e2248330c"
                }
            ]
        }
    ]
}
